<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ln_search_insur"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="#2196f3"
        android:layout_centerInParent="true"
        >
        <EditText
            android:id="@+id/search_notice_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint="@string/find_my_insurance" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_search_24"/>
        <ImageView
            android:id="@+id/write_notice_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_edit_24"/>
    </LinearLayout>

</LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="@null"
        android:visibility="visible"></ListView>
    <ImageView
        android:id="@+id/none_noticeboard_list_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/carimage"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/none_noticeboard_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/none_notice_board_list_tx"
        android:textSize="30dp"
        android:textColor="#2196F3"
        android:gravity="center_horizontal"
        android:visibility="gone"/>


</LinearLayout>
