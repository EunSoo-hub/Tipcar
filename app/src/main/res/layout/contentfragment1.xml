<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2196f3"
    android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#fff"
    android:text="04하1111"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:padding="10dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_chat_24"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/info_bell"
        android:layout_marginRight="10dp"/>

</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/my_info_edge"
             android:orientation="vertical"
             android:layout_margin="30dp"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="20dp">
                 <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:src="@drawable/carimage"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:textColor="#fff"
                     android:text="차량 정보를 다시 입력해 조회하거나 직접 브랜드, 모델 정를 선택해서 재등록할 수 있습니다."
                     />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 android:orientation="horizontal"
                 android:padding="20dp">

                 <TextView
                     android:id="@+id/tx_research_mycar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#fff"
                     android:text="차 번호로 재조회"/>

                 <TextView
                    android:id="@+id/tx_my_car_yes"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:textColor="#fff"
                     android:text="맞아요!"/>
             </LinearLayout>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="20dp"
             android:orientation="horizontal">

             <de.hdodenhof.circleimageview.CircleImageView
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:src="@drawable/car_image_example"/>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#000"
                     android:text="2020 벤츠 E class 세단(5세대)"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#000"
                     android:textSize="17dp"
                     android:text="E250 아방가르드"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="급격한 노화겪은 비주얼"/>
             </LinearLayout>

         </LinearLayout>

         <HorizontalScrollView
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_marginTop="20dp"
             android:background="#36000000"
             android:scrollbars="none"
             android:overScrollMode="never"
           >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:orientation="horizontal">
             <LinearLayout
                 android:id="@+id/Ln_myinfo_item_1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/apple_edge"
                 android:orientation="vertical"
                 android:layout_margin="10dp"
                 android:padding="10dp"
                 >
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:layout_gravity="center"
                     android:src="@drawable/carimage"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:textSize="20dp"
                     android:gravity="center"
                     android:text="내 차 보험\n관리하기"/>
             </LinearLayout>
<!--             2-->
                <LinearLayout
                    android:id="@+id/Ln_myinfo_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apple_edge"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/carimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="내 차 보험\n관리하기"/>
                </LinearLayout>
                <!--             3-->
                <LinearLayout
                    android:id="@+id/Ln_myinfo_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apple_edge"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/carimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="내 차 보험\n관리하기"/>
                </LinearLayout>
<!--                4-->
                <LinearLayout
                    android:id="@+id/Ln_myinfo_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apple_edge"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/carimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="내 차 보험\n관리하기"/>
                </LinearLayout>
<!--                5-->
                <LinearLayout
                    android:id="@+id/Ln_myinfo_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apple_edge"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/carimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="내 차 보험\n관리하기"/>
                </LinearLayout>
<!--                6-->
                <LinearLayout
                    android:id="@+id/Ln_myinfo_item_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apple_edge"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/carimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="내 차 보험\n관리하기"/>
                </LinearLayout>
            </LinearLayout>
         </HorizontalScrollView>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:gravity="center"
             android:layout_marginTop="30dp"
             android:orientation="horizontal">

             <LinearLayout
                 android:id="@+id/Ln_search_my_car"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@drawable/apple_edge"
                 android:gravity="center"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="차량 조회"/>
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/Ln_join_insure"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@drawable/apple_edge"
                 android:gravity="center"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="보험 가입"/>
             </LinearLayout>

         </LinearLayout>
     </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#2196f3"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_photo_camera_24"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#2196f3"
            android:visibility="gone"
            android:src="@drawable/tx_find_my_insurance"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#2196f3"
            android:src="@drawable/ic_baseline_white_add_24"/>
    </FrameLayout>
</LinearLayout>